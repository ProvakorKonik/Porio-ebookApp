<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_batch_list"
    android:clickable="true"
    android:layout_margin="6dp"
    android:background="@color/colorWhite"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:cardview_cat="http://schemas.android.com/apk/res-auto"
    cardview_cat:cardCornerRadius="8dp"

    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_margin="7dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!--<ImageView
            android:id="@+id/batch_name_background"
            android:layout_width="match_parent"
            android:minWidth="400dp"
            android:layout_height="150dp"
            android:background="#223d"
            android:scaleType="centerCrop"
            cardview_cat:layout_constraintStart_toStartOf="parent"
            cardview_cat:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/batch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="LU CSE 44 B"
            android:textColor="@color/colorPrimaryDark"

            android:textSize="25sp"
            cardview_cat:layout_constraintStart_toStartOf="parent"
            cardview_cat:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/batch_start_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-light"
            android:text="Start From : Feb 2020"
            android:textSize="16dp"
            android:textColor="@color/colorTextDeep"
            cardview_cat:layout_constraintStart_toStartOf="@+id/batch_name"
            cardview_cat:layout_constraintTop_toBottomOf="@+id/batch_name" />

        <TextView
            android:id="@+id/batch_course_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-light"
            android:text="Course Teacher : Md Ebrahim"
            android:textSize="16dp"
            android:textColor="@color/colorTextDeep"
          cardview_cat:layout_constraintStart_toStartOf="@+id/batch_start_from"
            cardview_cat:layout_constraintTop_toBottomOf="@+id/batch_start_from" />

        <TextView
            android:id="@+id/batch_uploaded_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-light"
            android:text="by Provakor Das"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            cardview_cat:layout_constraintEnd_toEndOf="parent"
            cardview_cat:layout_constraintTop_toBottomOf="@+id/batch_course_teacher" />

        <TextView
            android:id="@+id/batch_uploaded_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif-light"
            android:text="12th March 2020"
            android:textSize="12dp"
            android:textColor="@color/colorTextDeep"
            cardview_cat:layout_constraintEnd_toEndOf="@+id/batch_uploaded_by"
            cardview_cat:layout_constraintTop_toBottomOf="@+id/batch_uploaded_by" />

        <ImageView
            android:id="@+id/batch_like_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:tint="@color/colorGray"
            android:src="@drawable/ic_baseline_thumb_up_24"
            cardview_cat:layout_constraintStart_toStartOf="@+id/batch_course_teacher"
            cardview_cat:layout_constraintTop_toBottomOf="@+id/batch_course_teacher" />

        <TextView
            android:id="@+id/batch_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="sans-serif-light"
            android:text="41"
            android:textColor="@color/colorTextDeep"
            android:textSize="20sp"
            cardview_cat:layout_constraintBottom_toBottomOf="@+id/batch_like_img"
            cardview_cat:layout_constraintStart_toEndOf="@+id/batch_like_img"
            cardview_cat:layout_constraintTop_toTopOf="@+id/batch_like_img" />

        <ImageView
            android:id="@+id/batch_comment_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_comment_24"
            android:layout_marginLeft="20dp"
            android:tint="@color/colorGray"
            cardview_cat:layout_constraintStart_toEndOf="@+id/batch_like_count"
            cardview_cat:layout_constraintTop_toTopOf="@+id/batch_like_img" />

        <TextView
            android:id="@+id/batch_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif-light"
            android:text="21"
            android:textColor="@color/colorTextDeep"
            android:textSize="20sp"
            cardview_cat:layout_constraintBottom_toBottomOf="@+id/batch_comment_img"
            cardview_cat:layout_constraintStart_toEndOf="@+id/batch_comment_img"
            cardview_cat:layout_constraintTop_toTopOf="@+id/batch_comment_img" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>