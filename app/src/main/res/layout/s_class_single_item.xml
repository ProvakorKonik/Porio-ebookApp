<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_class_list"
    android:clickable="true"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:cardview_cat="http://schemas.android.com/apk/res-auto"
    cardview_cat:cardCornerRadius="12dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_margin="7dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edit_dbcs_topic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="Neural Network"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:typeface="sans"
            cardview_cat:layout_constraintEnd_toEndOf="parent"
            cardview_cat:layout_constraintStart_toStartOf="parent"
            cardview_cat:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edit_dbcs_serail_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-light"
            android:text="Serial : 1"
            android:textSize="16sp"
            cardview_cat:layout_constraintStart_toEndOf="@+id/edit_dbcs_class_date"
            cardview_cat:layout_constraintTop_toTopOf="@+id/edit_dbcs_class_date" />

        <TextView
            android:id="@+id/edit_dbcs_class_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-light"
            android:text="26th July 2020"
            android:textSize="16sp"
            cardview_cat:layout_constraintStart_toStartOf="@+id/edit_dbcs_topic_name"
            cardview_cat:layout_constraintTop_toBottomOf="@+id/edit_dbcs_topic_name" />

        <TextView
            android:id="@+id/edit_dbcs_class_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginVertical="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="8sp"
            android:text="@string/long_text"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/colorDeepGrayBlue"
            app:layout_constraintBottom_toBottomOf="parent"
            cardview_cat:layout_constraintEnd_toEndOf="parent"
            cardview_cat:layout_constraintStart_toStartOf="@+id/edit_dbcs_class_date"
            cardview_cat:layout_constraintTop_toBottomOf="@+id/edit_dbcs_class_date" />

        <TextView
            android:id="@+id/edit_dbcs_class_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-thin"
            android:text="12 Aug 2020"
            android:textSize="16sp"
            android:visibility="gone"
            cardview_cat:layout_constraintEnd_toEndOf="parent"
            cardview_cat:layout_constraintTop_toBottomOf="@+id/edit_dbcs_class_note" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>