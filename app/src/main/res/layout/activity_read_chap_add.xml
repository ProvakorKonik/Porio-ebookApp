<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadChapAdd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write Stories"
                android:layout_marginVertical="20dp"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/add_chap_select_photo"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:background="#2d2d2d"
                android:layout_gravity="center"
                tools:visibility="visible" />

            <Button
                android:id="@+id/add_chap_photo_select_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Image" />

            <EditText
                android:id="@+id/edit_add_chapter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginVertical="20dp"
                android:hint="Add Chapter/Part Name"
                android:inputType="textCapWords"
                android:textAlignment="center"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edit_add_chap_priority_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginVertical="10dp"
                android:hint="Chapter Serial No"
                android:inputType="number" />
            <EditText
                android:id="@+id/edit_add_chap_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:lines="5"
                android:hint="Add Story"
                android:inputType="textMultiLine"
                android:textSize="14sp" />

            <Button
                android:id="@+id/add_chap_upload_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>