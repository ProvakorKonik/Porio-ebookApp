<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview_cat="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_discuss_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:clickable="true"
    android:focusable="true"
    cardview_cat:cardElevation="0dp"
    cardview_cat:cardBackgroundColor="@color/fui_transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:id="@+id/card_category_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/style_ripple_btn_one"
            android:paddingHorizontal="40dp"
            android:text="SCIENCE"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorWhite"
            cardview_cat:layout_constraintBottom_toBottomOf="parent"
            cardview_cat:layout_constraintEnd_toEndOf="parent"
            cardview_cat:layout_constraintStart_toStartOf="parent"
            cardview_cat:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>