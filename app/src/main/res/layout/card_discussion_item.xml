<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:id="@+id/cardview_discuss_item"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:cardview_cat="http://schemas.android.com/apk/res-auto"
    cardview_cat:cardCornerRadius="8dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/discuss_item_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"

            android:background="@drawable/style_ripple_btn_ten_a"
            android:minWidth="400dp"
            android:scaleType="centerCrop"
            cardview_cat:layout_constraintBottom_toBottomOf="parent"
            cardview_cat:layout_constraintEnd_toEndOf="parent"
            cardview_cat:layout_constraintStart_toStartOf="parent"
            cardview_cat:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/discuss_item_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/style_ripple_btn_six_round"
            android:text="DISCUSS"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            cardview_cat:layout_constraintBottom_toBottomOf="@+id/discuss_item_img"
            cardview_cat:layout_constraintEnd_toEndOf="@+id/discuss_item_img" />

        <TextView
            android:id="@+id/discuss_total_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:text="125 Comments"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            cardview_cat:layout_constraintStart_toStartOf="parent"
            cardview_cat:layout_constraintTop_toTopOf="@+id/discuss_item_save_btn" />

        <TextView
            android:id="@+id/discuss_item_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:inputType="textMultiLine"
            android:text="What You Want to PlayWhat You Want to PlayWhat You Want to Play"
            android:textAlignment="center"
            android:paddingHorizontal="14dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            cardview_cat:layout_constraintEnd_toEndOf="parent"
            cardview_cat:layout_constraintStart_toStartOf="@+id/discuss_item_img"
            cardview_cat:layout_constraintTop_toTopOf="@+id/discuss_item_img" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>