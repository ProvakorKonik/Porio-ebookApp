<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singlebook_bottom_sheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:text="SUMMARY HERE"
        android:textColor="@color/colorDeepGrayBlue"
        android:textSize="18sp"
        android:textStyle="bold"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"

        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/single_book_summery_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="joy bangla joy basdf sdf"
            android:textColor="@color/colorBlack"
            android:layout_margin="10dp"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/single_book_readmorebtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Read More..."
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="5dp"
            android:background="@drawable/style_ripple_btn_three_round"/>
        <Button
            android:id="@+id/single_book_read_chap"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Start Reading"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/style_ripple_btn_three_round"/>
        <Button
            android:id="@+id/single_book_document"
            android:layout_width="200dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Document"

            android:textColor="@color/colorWhite"
            android:background="@drawable/style_ripple_btn_three_round"/>

    </LinearLayout>

    
</LinearLayout>